<div class ="container offset-4">
 <div class ="nes-container is-rounded is-dark col-4">
  <h3 class ="text-center">新規登録</h3>
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
     <%= f.label :name %><br />
      <div class="nes-field">
       <%= f.text_field :name, autofocus: true, class: "nes-input" %>
      </div>
    </div>

    <div class="field">
     <%= f.label :email %><br />
      <div class="nes-field">
       <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "nes-input" %>
      </div>
    </div>

    <div class="field">
     <%= f.label :password %>
     <% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %>文字以上)</em>
     <% end %><br />
      <div class="nes-field">
       <%= f.password_field :password, autocomplete: "new-password", class: "nes-input" %>
      </div>
    </div>

    <div class="field">
     <%= f.label :password_confirmation %><br />
      <div class="nes-field">
       <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "nes-input" %><br />
      </div>
    </div>

    <div class="actions">
    <%= f.submit "登録する", class: "nes-btn" %>
    </div>
     <% end %><br />
  </div>
   <%= render "devise/shared/links" %>
</div>
