<body class ="square-page">
  <div class ="container-lg offset-lg-1">
    <div class ="row ml-2">
      <div class ="nes-container is-dark col-lg-3">
        <h3 class = "text-center">Square 一覧 (<%= @search_categories.count %>)
        </h3>
      </div>
    </div>
    <% if params[:keyword] %>
      <h4 class ="ml-5 text-white">「<%= params[:keyword] %>」の検索結果：<%= @search_categories.count %>件</h4>
    <% end %>
    <div class ="col-lg-10 offset-lg-1">
      <%= render "squares/category", categories: @categories %>
      <% @search_category.each do |square| %>
        <div class="nes-container is-dark with-title">
          <p class="title">
          <%= square.title %>
          </p>
          <div class ="d-flex flex-wrap">
            <%= link_to square_path(square.id),data: {"turbolinks" => false} do %>
              <%= attachment_image_tag square, :image, size: "150x150", format: 'jpeg' %>
            <% end %>
            <div class ="col-8 offset-1">
              <%= square.description %>
            </div>
          </div>
        </div>
      <% end %>
      <div data-turbolinks="false" class="mt-3 mb-3">
        <%= paginate @search_category %>
      </div>
    </div>
  </div>
</div>
</body>