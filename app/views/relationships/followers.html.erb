<body class ="relationship">
<div class ="container-lg offset-lg-1">
 <div class ="row ml-lg-2">
  <div class ="nes-container is-dark with-title mb-5">
   <h3 class = "text-center"><%= @user.name %>さんのフォロワー</h3>
  </div>
 </div>
 <% if @users.exists? %>
  <div class="col-lg-10 offset-lg-1 ">
   <% @users.each do |user| %>
   <div class="nes-container is-dark">
    <h3><strong><%= user.name %></strong></h3>
     <div class="row">
      <div class="col-2">
       <%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg", class:" rounded-circle" %>
       <% end %>
      </div>
     <div class="col-9">
      <div class="d-flex flex-wrap mb-2">
       <%= link_to user_followings_path(user),class:"no-underline" do %>
        フォロー中: <%= user.followings.count %>
       <% end %>
     　フォロワー: <%= user.followers.count %>
      </div>
        <p><%=user.introduction %></p>
     </div>
    </div>
   </div>
   <% end %>
  </div>
 <% else %>
 <div class ="text-center text-white">
  <p>フォロワーはいません。</p>
 </div>
 <% end %>
</div>
</body>
