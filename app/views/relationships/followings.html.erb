<body class ="relationship">
<div class = "container-lg offset-lg-1">
 <div class ="row ml-lg-2">
  <div class ="nes-container is-dark with-title mb-5">
   <h3 class = "text-center"><%= @user.name %>さんがフォロー中</h3>
  </div>
 </div>
 <% if @users.exists? %>
  <div class="col-lg-10 offset-lg-1 ">
   <% @users.each do |user| %>
   <div class="nes-container is-dark">
     <div class="row">
      <div class="col-2 mr-4">
       <%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :profile_image, size: "130x130", fallback: "no_image.jpg", class:" rounded-circle" %>
       <% end %>
      </div>
     <div class="col-9">
      <div class="d-flex justify-content-between">
      <h3><strong><%= user.name %></strong></h3>
      <% if current_user.following?(user) %>
         <%= link_to "フォロー解除", user_relationships_path(user.id), method: :delete, class: "nes-btn is-primary w-25" %>
        <% end %>
       </div>
       <span class ="d-flex flex-wrap">
       <%= link_to user_followings_path(user),class: "no-underline" do %>
       <p class ="text-white">フォロー中<%= user.followings.count %>人</p>
       <% end %>
       <%= link_to user_followers_path(user),class: "no-underline" do %>
     　<p class ="text-white"> フォロワー<%= user.followers.count %>人</p>
     　<% end %>
     　<%= link_to favorites_path(user),class: "no-underline" do %>
     　<p class ="text-white">お気に入り<%= user.favorites.count %>件</p>
     　<% end %>
      </span>
        <p><%=user.introduction %></p>
     </div>
    </div>
   </div>
   <% end %>
  </div>
 <% else %>
 <div class ="text-center text-white">
  <p>フォロー中のユーザーはいません。</p>
 </div>
 <% end %>
</div>
</body>
