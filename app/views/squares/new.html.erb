<div class ="container offset-3">
 <div class= "text-center">
  <%= flash[:alert] %>
 </div>
  <div class ="nes-container is-rounded is-dark col-7 ">
   <h2 class ="text-center">Square作成</h2>
    <%= form_with model: @square, local:true do |f| %>
     <div class="field">
      <%= f.label :image %><br>
      <%= f.attachment_field :image %>
     </div>

     <div class="nes-field">
      <%= f.label :title %>
      <%= f.text_field :title, class: "nes-input" %>
     </div>

     <div class="nes-field">
      <%= f.label :description %>
      <%= f.text_area :description, class: "nes-input" %>
     </div>

     <div class="field">
      <%= f.label :category %><br>
      <%= f.collection_select :category_id, Category.all ,:id, :name, include_blank: "--選択してください--", class: "nes-select" %><br>
     </div>

     <div class="d-flex justify-content-end">
      <%= f.submit '作成する' %>
     </div>
      <% end %>
  </div>
</div>
