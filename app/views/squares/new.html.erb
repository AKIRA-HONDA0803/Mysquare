<div class ="container">
 <div class ="nes-container is-dark with-title col-3 mb-5">
  <h3 class = "text-center">Square作成</h3>
</div>
<div class ="offset-2 col-8">
 <div class= "text-center mb-3">
  <%= flash[:alert] %>
 </div>
  <div class ="nes-container is-rounded is-dark">
    <%= form_with model: @square, local:true do |f| %>
     <div class="field mt-3">
      <h4><%= f.label :image %></h4>
      <%= attachment_image_tag @square, :image, size: "150x150", fallback: "no_image.jpg" %><br>
      <%= f.attachment_field :image %>
     </div>

     <div class="nes-field mt-3">
      <h4><%= f.label :title %></h4>
      <%= f.text_field :title, class: "nes-input" %>
     </div>

     <div class="nes-field mt-3">
      <h4><%= f.label :description %></h4>
      <%= f.text_area :description, class: "nes-input" %>
     </div>

     <div class="field mt-3">
      <h4><%= f.label :category %></h4>
      <%= f.collection_select :category_id, Category.all ,:id, :name, include_blank: "--選択してください--", class: "nes-select" %><br>
     </div>

     <div class="d-flex justify-content-end">
      <%= f.submit '作成する', class: "nes-btn is-success" %>
     </div>
      <% end %>
    </div>
  </div>
</div>
