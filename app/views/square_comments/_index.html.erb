<div>
  <% square.square_comments.includes([:user]).each do |square_comment| %>
      <%= attachment_image_tag square_comment.user, :profile_image, size: "70x70", fallback: "no_image.jpg", class:" rounded-circle" %>
      <%= square_comment.user.name %><br>
      <%= square_comment.created_at.strftime('%m/%d') %><%= square_comment.comment %>
      <% if square_comment.user == current_user %>
       <div>
        <%= link_to "削除", square_square_comment_path(square_comment.square, square_comment), method: :delete, remote: true %>
       </div>
      <% end %>
  <% end %>
</div>

