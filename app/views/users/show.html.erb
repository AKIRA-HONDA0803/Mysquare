<div class = "container offset-1">
 <div class= "text-center">
  <%= flash[:notice] %>
 </div>
 <div class = "row">
  <div class ="col-10 offset-1">
   <div class="nes-container is-rounded is-dark">
    <div class="d-flex flex-wrap">
    <%= attachment_image_tag @user, :profile_image, size: "100x100" %>
     <div class ="col-8">
      <div class="d-flex justify-content-between">
      <h2><%= @user.name %></h2>
       <% if @user == current_user %>
        <%= link_to  edit_user_path(@user) do %>
        <button type="button" class="nes-btn is-primary">プロフィール編集</button>
        <% end %>
       <% end %>
       </div>
      <p>
       <%= link_to favorites_path do %>お気に入り<%= @user.favorites.count %>件
       <% end %>
      </p>
     </div>
     </div>
     <strong><p><%= @user.introduction %></p></strong>
</div>
      </div>
      </div>
  <% if @deck_recipes.present? %>
  <div class="d-flex flex-wrap offset-1">
   <% @deck_recipes.each do |deck_recipe| %>
    <% square = Square.find_by(id: deck_recipe.square.id) %>
    <%= link_to square_path(deck_recipe.square.id) do %>
    <%= attachment_image_tag square, :image, size: "304x304", format: 'jpeg' %>
    <% end %>
   <% end %>
   </div>
  <% else %>
   <div class ="text-center">
    <p>My squareが作成されていません。</p>
    </div>
  <% end %>
 </div>
 </div>
 </div>
</div>

